<apex:page Controller="ControllerPromociones3" showHeader="false" standardStylesheets="false" sidebar="false" docType="html-5.0">
<html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en"> 
  <head>
    <apex:slds />
    <style>  
      @media only screen and (max-width: 30em) {
        .slds-scope .slds-size_3-of-12, .slds-scope .slds-size--3-of-12, .slds-scope .slds-size_6-of-12, .slds-scope .slds-size--6-of-12 {
            width: 100%;
        }
        .slds-scope img {
            max-width: 100% !important;
            height: auto !important;
        }
      }
      @media only screen and (max-width: 48em) {
        .slds-scope .slds-size_3-of-12, .slds-scope .slds-size--3-of-12, .slds-scope .slds-size_6-of-12, .slds-scope .slds-size--6-of-12 {
            width: 100%;
        }
        .slds-scope img {
            max-width: 100% !important;
            height: auto !important;
        }
      }
      @media only screen and (max-width: 64em) {
        .slds-scope .slds-size_3-of-12, .slds-scope .slds-size--3-of-12, .slds-scope .slds-size_6-of-12, .slds-scope .slds-size--6-of-12 {
            width: 100%;
        }
        .slds-scope img {
            max-width: 100% !important;
            height: auto !important;
        }
      } 
    </style>
    <style>
    .slds-input2 {
      background-color: #fff;
      color: #16325c;
      border: 1px solid #d8dde6;
      border-radius: .25rem;
      width: 95%;
      //transition: border .1s linear,background-color .1s linear;
      //display: inline-block;
      //padding: 0 1rem 0 1rem;
      line-height: 1.875rem;
      min-height: calc(1.875rem + (1px * 2));
    }
    </style>
    <script src="https://code.jquery.com/jquery-1.12.3.js"></script>
    <script>
        $(document).ready( function () { 
            var Fnombre = $("[id$='Fnombre']").val();
            var Fapellido = $("[id$='Fapellido']").val();
            var Finden = $("[id$='Finden']").val();
            var Femail = $("[id$='Femail']").val();
            var Fmovil = $("[id$='Fmovil']").val();
            var Fpais = $("[id$='Fpais']").val();
            var Fciudad = $("[id$='Fciudad']").val();
            if(Fnombre=='' && Fapellido=='' && Finden=='' && Femail=='' && Fmovil=='') { 
                $("[id$='Fpais']").prop('disabled', true);
                $("[id$='Fciudad']").prop('disabled', true);
            }    
        });
        function activate() {
            var Fnombre = $("[id$='Fnombre']").val();
            var Fapellido = $("[id$='Fapellido']").val();
            var Finden = $("[id$='Finden']").val();
            var Femail = $("[id$='Femail']").val();
            var Fmovil = $("[id$='Fmovil']").val();
            var Fpais = $("[id$='Fpais']").val();
            var Fciudad = $("[id$='Fciudad']").val();
            if(Fnombre!=null && Fapellido!=null && Finden!=null && Femail!=null && Fmovil!=null) { 
                $("[id$='Fpais']").prop('disabled', false);
                $("[id$='Fciudad']").prop('disabled', false);
            }
        }
    </script>
  </head>
  <body>    
        <div class="demo-only demo-only--sizing slds-grid slds-wrap">
        
            <div class="slds-size_3-of-12">
                <div class="slds-box slds-box_x-small slds-text-align_center slds-m-around_x-small" style="border:none !important;">
                    <apex:image value="{!$Resource.Banner1}" id="banner1" styleClass="slds-show_x-large" style="height:600px;"/>
                    <apex:image value="{!$Resource.Cintillo}" id="cintillo" style="height:0px;"/>
                </div>
            </div>
            
            <div class="slds-size_6-of-12" style="margin-top:25px !important;">
                <div class="slds-box slds-box_x-small slds-m-around_x-small">
            
                    <figure class="slds-image slds-image--avatar slds-align--absolute-center slds-m-around_medium">
                        <apex:image value="{!$Resource.LogoFPC}"/>
                    </figure>
                    
                    <apex:form id="theForm">
                    <article class="slds-card">
                        <div class="slds-card__header slds-grid slds-m-around_medium">
                            <header class="slds-media slds-media--center slds-has-flexi-truncate">
                                <div class="slds-media__figure">
                                    <svg aria-hidden="true" class="slds-icon slds-icon-standard-contact slds-icon_small">
                                        <use xlink:href="{!URLFOR($Asset.SLDS, 'assets/icons/standard-sprite/svg/symbols.svg#contact')}"></use>
                                    </svg>
                                </div>
                                <div class="slds-media__body slds-truncate">
                                    <a href="javascript:void(0);" class="slds-text-link--reset">
                                        <span class="slds-text-heading_small">Solicite Asesoría Personalizada</span>
                                    </a>
                                </div>
                            </header>
                        </div>
                        
                        <div class="slds-form-element__group">
                            <div class="slds-form-element__row">
                                <div class="slds-form-element slds-size_1-of-1">
                                    <apex:Messages styleClass="slds-notify slds-notify--alert slds-theme_alert-texture slds-theme_warning" style="background:#f78d1c; color:#FFF; font-weight: bold;"/>                           
                                </div>
                            </div>
                        </div>
                        
                        <!-- CARD BODY = TABLE -->
                        <div class="slds-card__body">
                            <fieldset class="slds-form-element slds-form-element_compound">
                              <!-- legend class="slds-form-element__legend slds-form-element__label"></legend -->
                              <div class="slds-form-element__control slds-m-around_x-large">
                                <div class="slds-form-element__row">
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-01"><abbr class="slds-required" title="required">* </abbr>Nombres</label>
                                      <div class="slds-form-element__control">
                                        <!-- input type="text" id="input-01" class="slds-input" / -->
                                        <apex:inputField required="true" id="Fnombre" styleclass="slds-input" value="{!candidato.FirstName}"/>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-02"><abbr class="slds-required" title="required">* </abbr>Apellidos</label>
                                      <div class="slds-form-element__control">
                                        <apex:inputField required="true" id="Fapellido" styleclass="slds-input" value="{!candidato.LastName}"/>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                                <div class="slds-form-element__row">
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-01"><abbr class="slds-required" title="required">* </abbr>Numero de Identificación</label>
                                      <div class="slds-form-element__control">
                                        <apex:inputText required="true" id="Finden" styleclass="slds-input" value="{!identificacion}" /> 
                                      </div>
                                    </div>
                                  </div>
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-02"><abbr class="slds-required" title="required">* </abbr>Correo electrónico</label>
                                      <div class="slds-form-element__control">
                                        <apex:inputField required="true" id="Femail" styleclass="slds-input" value="{!candidato.Email}" onkeyup="javascript:this.value=this.value.toLowerCase();" />
                                      </div>
                                    </div>
                                  </div>
                                </div>
                                <div class="slds-form-element__row">
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-01">Teléfono Trabajo</label>
                                      <div class="slds-form-element__control">
                                        <apex:inputField styleclass="slds-input" value="{!candidato.Telefono_Trabajo__c}" onkeypress="return isNumberKey(event)"/>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-02"><abbr class="slds-required" title="required">* </abbr>Teléfono Móvil</label>
                                      <div class="slds-form-element__control">
                                        <apex:inputField required="true" id="Fmovil" styleclass="slds-input" value="{!candidato.Phone}" onkeypress="return isNumberKey(event)" onchange="activate();"/>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                                <!-- div class="slds-form-element__row">
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-01"><abbr class="slds-required" title="required">* </abbr>Pais</label>
                                      <div class="slds-form-element__control">
                                        <apex:inputField value="{!candidato.F_Pais__c}" id="idP" styleclass="slds-input2" required="true" />
                                      </div>
                                    </div>
                                  </div>
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-01"><abbr class="slds-required" title="required">* </abbr>Estado/Departamento</label>
                                      <div class="slds-form-element__control">
                                        <apex:inputField value="{!candidato.F_Estado__c}" id="idE" styleclass="slds-input2" required="true" />
                                      </div>
                                    </div>
                                  </div>
                                </div -->
                                <div class="slds-form-element__row">
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-01"><abbr class="slds-required" title="required">* </abbr>Pais</label>
                                      <div class="slds-form-element__control"> 
                                          <apex:selectList styleclass="slds-select" required="true" id="Fpais" size="1" value="{!pais}">
                                              <apex:selectoptions value="{!Paises}"/>
                                              <apex:actionSupport event="onchange" reRender="Fciudad"/>
                                          </apex:selectList>                   
                                      </div>
                                    </div>
                                  </div>
                                  <div class="slds-size_1-of-2">
                                    <div class="slds-form-element">
                                      <label class="slds-form-element__label" for="input-01"><abbr class="slds-required" title="required">* </abbr>Estado/Departamento</label>
                                      <div class="slds-form-element__control">                                        
                                          <apex:selectList styleclass="slds-select" required="true" size="1" value="{!depto}" id="Fciudad">
                                              <apex:selectoptions value="{!Depart}"/>
                                              <!-- apex:actionSupport event="onchange" reRender="states"/ -->
                                          </apex:selectList>                                        
                                      </div>
                                    </div>
                                  </div>
                                </div>                              
                              </div>
                            </fieldset>    
                        </div>
                        <!-- / CARD BODY = SECTION + TABLE -->
                        <div class="slds-card__footer">
                            <apex:commandButton value="Enviar Solicitud" action="{!Guardarpop}" styleClass="slds-button slds-button--brand" /> 
                        </div>
                    </article>
                    </apex:form>
                
                </div>
            </div>
            
            <div class="slds-size_3-of-12">
                <div class="slds-box slds-box_x-small slds-text-align_center slds-m-around_x-small" style="border:none !important;">
                    <apex:image value="{!$Resource.Banner2}" id="banner2" styleClass="slds-show_x-large" style="height:600px;"/>
                </div>
            </div>
            
        </div>
        <!-- JAVASCRIPT -->
        <script>
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
     
            return true;
        }
        function conMayusculas(field) { 
            field.value = field.value.tolowerCase() 
        } 
        </script>
        <!-- / JAVASCRIPT -->
    </body>       
  </html>
</apex:page>