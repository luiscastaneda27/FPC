    <apex:sectionHeader title="Modificación de PreVenta" 
        subtitle="{!if(PreVenta__c.id = null, 'Nueva Preventa', if(PreVenta__c.Company__c != null, PreVenta__c.Company__c, PreVenta__c.Name))}"/>
