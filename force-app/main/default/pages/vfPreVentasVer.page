                    value="/apex/vfBuscarDuplicados?retURL={!PreVenta__c.id}&id={!PreVenta__c.id}">
                    Buscar duplicados
                </apex:outputLink>   
                
                <apex:outputLink styleClass="btn" style="text-decoration:none;padding:4px;" 
