<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>silvia.ayestas@ficohsa.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Paso 1</label>
        <name>Paso_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( 
RecordType.DeveloperName = &apos;Actualizacion_informacion&apos;,
 !Aprobado__c,
 !Viene_Portal_Autogestion__c, 
OR(
 !ISBLANK( Nombre_Cliente__c),
 !ISBLANK( Apellidos__c), 
!ISBLANK( Segundo_nombre__c ), 
!ISBLANK( Segundo_apellido__c ),
!ISPICKVAL( Tipo_Identificacion__c,&apos;&apos;), 
!ISBLANK( Identificacion__c), !ISPICKVAL(Sexo__c,&apos;&apos;),
!ISBLANK( Fecha_Nacimiento__c ),
 !ISBLANK( Correo_Electronico__c)
)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>A_estado_cerrado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Aprobado_verdadero</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Caso_aprobado_interno</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>A_devuelto</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Caso_rechazado_interno</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>A_pendiente_aprobacion</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Actualizacion Cr√≠tica</label>
