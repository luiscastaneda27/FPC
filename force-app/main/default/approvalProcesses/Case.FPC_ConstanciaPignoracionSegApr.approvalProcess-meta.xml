<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Aprobacion_Supervisor_SAC</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Aprobación Supervisor SAC</label>
        <name>Aprobacion_Supervisor_SAC</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Aprobacion_SubGerencia_SAC</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.FPC_ContarNumeroPrestamo__c</field>
                <operation>equals</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <label>Aprobación SubGerencia SAC</label>
        <name>Aprobacion_SubGerencia_SAC</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Este proceso se utiliza para cuando el oficial sac detalla el número de préstamo en la constancia de pignoración</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4</booleanFilter>
        <criteriaItems>
            <field>Case.FPC_ContarNumeroPrestamo__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Constancia</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Constancia__c</field>
            <operation>equals</operation>
            <value>P1</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Archivo_Adjunto__c</field>
            <operation>equals</operation>
            <value>Verdadero</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>A_estado_cerrado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Aprobado_verdadero</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Caso_aprobado_interno</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>A_devuelto</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Caso_rechazado_interno</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pendiente_segunda_aprobacion</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Constancia de Pignoración Segunda Apro</label>
    <processOrder>9</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
