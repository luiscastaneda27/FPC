<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>astrid.rivera@ficohsa.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>cintya.alcantara@ficohsa.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>RecordType</field>
        <field>CaseNumber</field>
        <field>Ver__c</field>
        <field>Nombre_Cliente__c</field>
        <field>Contact</field>
        <field>CreatedDate</field>
        <field>Origin</field>
        <field>Type</field>
        <field>Priority</field>
        <field>Motivo_Cambio__c</field>
        <field>Subject</field>
        <field>Description</field>
        <field>Comments</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Aprobacion_Supervisor_SAC</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Aprobación Supervisor SAC</label>
        <name>Aprobacion_Supervisor_SAC</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Aprobacion_SubGerencia_SAC</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Aprobación SubGerencia SAC</label>
        <name>Aprobacion_SubGerencia_SAC</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 3) OR (2 AND 3 AND 4)</booleanFilter>
        <criteriaItems>
            <field>Case.Cuentas_seleccionada__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Aprobado__c</field>
            <operation>equals</operation>
            <value>Falso</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Cambio de Subproducto</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Enviar_a_aprobacion__c</field>
            <operation>equals</operation>
            <value>Verdadero</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>A_estado_cerrado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Aprobado_verdadero</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>A_devuelto</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>A_pendiente_aprobacion</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CambioSubProducto</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
